{
   "extends": [
      "react-app",
      "react-app/jest",
      "airbnb",
      "eslint:recommended",
      "airbnb-typescript",
      "plugin:import/typescript",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
   ],
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
   },
   "ignorePatterns": [
      "dist",
      ".eslintrc.cjs",
      "postcss.config.js",
      "tailwind.config.js"
   ],
   "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
   ],
   "rules": {
      "import/no-extraneous-dependencies": [
         "error",
         {
            "devDependencies": true
         }
      ],
      "@typescript-eslint/no-unused-vars": "warn",
      "react/react-in-jsx-scope": [
         "off",
         {
            "ignore": [
               "JSX"
            ]
         }
      ],
      "react/no-unknown-property": [
         "off",
         {
            "ignore": [
               "JSX"
            ]
         }
      ]
   }
}